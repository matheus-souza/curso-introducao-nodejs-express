<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Introdução a NodeJS</title>
</head>
    <body>
        <h1>Página Home</h1>
        <% var texto = "Trabalhando com EJS"; %>
        <p><%= texto %></p>
        <ul>
            <% for (var chave in clientes) { %>
                <li><a href="cliente/<%= clientes[chave].id %>"><%= clientes[chave].nome %> - <%= clientes[chave].email %></a></li>
            <% } %>
        </ul>
        <br/>

        <%  if (errors) { %>
        <ul>
            <% for (var key = 0 in errors) { %>
            <li><%= errors[key].msg %></li>
            <% } %>
        </ul>
        <% } %>

        <form action="/" method="post">
            <input type="text" name="nome" placeholder="Nome" value="<%= data.nome %>">
            <input type="text" name="email" placeholder="E-mail"  value="<%= data.email %>">
            <button>Adicionar</button>
        </form>
    </body>
</html>